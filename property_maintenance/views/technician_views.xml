<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_maintenance_technician_tree" model="ir.ui.view">
            <field name="name">maintenance.technician.tree</field>
            <field name="model">maintenance.technician</field>
            <field name="arch" type="xml">
                <tree string="Technicians">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="team_id"/>
                    <field name="hourly_rate"/>
                </tree>
            </field>
        </record>
        
        <record id="view_maintenance_technician_form" model="ir.ui.view">
            <field name="name">maintenance.technician.form</field>
            <field name="model">maintenance.technician</field>
            <field name="arch" type="xml">
                <form string="Technician">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="team_id"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="hourly_rate"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record id="action_maintenance_technician" model="ir.actions.act_window">
            <field name="name">Technicians</field>
            <field name="res_model">maintenance.technician</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
