<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_property_unit_tree" model="ir.ui.view">
            <field name="name">property.unit.tree</field>
            <field name="model">property.unit</field>
            <field name="arch" type="xml">
                <tree string="Units">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="property_id"/>
                    <field name="building_id"/>
                    <field name="unit_type"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>
        
        <record id="view_property_unit_form" model="ir.ui.view">
            <field name="name">property.unit.form</field>
            <field name="model">property.unit</field>
            <field name="arch" type="xml">
                <form string="Unit">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="property_id"/>
                                <field name="building_id"/>
                            </group>
                            <group>
                                <field name="unit_type"/>
                                <field name="status"/>
                                <field name="tenant_id"/>
                                <field name="owner_id"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        </data>
</odoo>
