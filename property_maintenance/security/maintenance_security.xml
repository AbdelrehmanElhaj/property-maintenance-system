<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Categories -->
        <record id="module_category_property_maintenance" model="ir.module.category">
            <field name="name">Property Maintenance</field>
            <field name="description">Manage property maintenance operations</field>
            <field name="sequence">20</field>
        </record>
        
        <!-- User Groups -->
        <record id="group_maintenance_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_property_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_maintenance_technician" model="res.groups">
            <field name="name">Technician</field>
            <field name="category_id" ref="module_category_property_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('group_maintenance_user'))]"/>
        </record>
        
        <record id="group_maintenance_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_property_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('group_maintenance_technician'))]"/>
        </record>
        
        <!-- Portal Groups -->
        <record id="group_maintenance_portal_tenant" model="res.groups">
            <field name="name">Portal - Tenant</field>
            <field name="category_id" ref="module_category_property_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>
        
        <record id="group_maintenance_portal_owner" model="res.groups">
            <field name="name">Portal - Owner</field>
            <field name="category_id" ref="module_category_property_maintenance"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>
        
        <!-- Multi-company Rules -->
        <record id="property_property_comp_rule" model="ir.rule">
            <field name="name">Property: multi-company</field>
            <field name="model_id" ref="model_property_property"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="maintenance_request_comp_rule" model="ir.rule">
            <field name="name">Maintenance Request: multi-company</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <record id="work_order_comp_rule" model="ir.rule">
            <field name="name">Work Order: multi-company</field>
            <field name="model_id" ref="model_work_order"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
        
        <!-- Portal Access Rules - Tenants -->
        <record id="maintenance_request_portal_tenant_rule" model="ir.rule">
            <field name="name">Maintenance Request: Portal Tenant Access</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="domain_force">[('tenant_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_maintenance_portal_tenant'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- Portal Access Rules - Owners -->
        <record id="maintenance_request_portal_owner_rule" model="ir.rule">
            <field name="name">Maintenance Request: Portal Owner Access</field>
            <field name="model_id" ref="model_maintenance_request"/>
            <field name="domain_force">[('owner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_maintenance_portal_owner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>
