<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="stage_new" model="maintenance.stage">
            <field name="name">New</field>
            <field name="code">new</field>
            <field name="sequence">10</field>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_submitted" model="maintenance.stage">
            <field name="name">Submitted</field>
            <field name="code">submitted</field>
            <field name="sequence">20</field>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_approved" model="maintenance.stage">
            <field name="name">Approved</field>
            <field name="code">approved</field>
            <field name="sequence">30</field>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_in_progress" model="maintenance.stage">
            <field name="name">In Progress</field>
            <field name="code">in_progress</field>
            <field name="sequence">40</field>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_on_hold" model="maintenance.stage">
            <field name="name">On Hold</field>
            <field name="code">on_hold</field>
            <field name="sequence">50</field>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_completed" model="maintenance.stage">
            <field name="name">Completed</field>
            <field name="code">completed</field>
            <field name="sequence">60</field>
            <field name="done" eval="True"/>
            <field name="fold" eval="False"/>
        </record>
        
        <record id="stage_closed" model="maintenance.stage">
            <field name="name">Closed</field>
            <field name="code">closed</field>
            <field name="sequence">70</field>
            <field name="done" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
        
        <record id="stage_cancelled" model="maintenance.stage">
            <field name="name">Cancelled</field>
            <field name="code">cancelled</field>
            <field name="sequence">80</field>
            <field name="cancelled" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
        
    </data>
</odoo>
